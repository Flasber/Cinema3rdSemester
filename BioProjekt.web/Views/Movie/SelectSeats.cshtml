@using BioProjektModels
@model List<Seat>

<h1>Vælg Sæde</h1>

<div class="seats">
    @foreach (var seat in Model)
    {
        <div class="seat-card @(seat.IsAvailable ? "" : "reserved")">
            <p>@seat.SeatNumber</p>
            @if (seat.IsAvailable)
            {
                <button class="btn btn-success"
                        onclick="location.href='@Url.Action("ConfirmBooking", "Booking", new { seatId = seat.Id })'">
                    Vælg
                </button>
            }
            else
            {
                <span>Reserveret</span>
            }
        </div>
    }
</div>

<style>
    .seats {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .seat-card {
        background-color: #161b22;
        border-radius: 8px;
        padding: 15px;
        width: 100px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

        .seat-card.reserved {
            background-color: #d9534f;
        }

        .seat-card p {
            font-size: 16px;
            font-weight: bold;
            color: white;
        }

    .btn {
        background-color: #0d6efd;
        color: white;
        border-radius: 5px;
        padding: 10px 20px;
        border: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0b5ed7;
        }
</style>
