@using BioProjektModels
@model List<Screening>

<div class="dark-theme">
    <h1>@ViewData["MovieTitle"] - Visningstider</h1>

    <div class="showtimes">
        @foreach (var screening in Model)
        {
            <div class="showtime-card">
                <p>@screening.Date.ToString("dd/MM/yyyy") @screening.Time.ToString(@"hh\:mm")</p>
                <button class="btn btn-primary"
                        onclick="location.href='@Url.Action("SelectSeats", "Booking", new { showtimeId = screening.Id })'">
                    Vælg sæde
                </button>
            </div>
        }
    </div>
</div>

<style>
    .dark-theme {
        background-color: #0d1117;
        color: white;
        padding: 30px;
        min-height: 100vh;
    }

    h1 {
        text-align: center;
        color: white;
    }

    .showtimes {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .showtime-card {
        background-color: #161b22;
        border-radius: 8px;
        padding: 15px;
        width: 250px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

        .showtime-card p {
            font-size: 16px;
            font-weight: bold;
            color: white;
        }

    .btn {
        background-color: #0d6efd;
        color: white;
        border-radius: 5px;
        padding: 10px 20px;
        border: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0b5ed7;
        }
</style>
