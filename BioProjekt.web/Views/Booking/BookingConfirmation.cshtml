@model BioProjekt.web.Models.BookingConfirmationViewModel

@{
    ViewData["Title"] = "Booking Bekræftelse";
}

<div class="confirmation-container">
    <h1>Tak for din booking!</h1>

    <div class="info-box">
        <img src="@Model.PosterUrl" alt="Filmplakat" class="poster" />

        <div class="details">
            <p><strong>Film:</strong> @Model.MovieTitle</p>
            <p><strong>Sal:</strong> @Model.AuditoriumName</p>
            <p><strong>Starttid:</strong> @Model.StartTime.ToString("dd-MM-yyyy HH:mm")</p>
            <p><strong>Sluttid:</strong> @Model.EndTime.ToString("dd-MM-yyyy HH:mm")</p>
            <p><strong>Sæder:</strong> @string.Join(", ", Model.SeatLabels)</p>
            <p><strong>Total pris:</strong> @Model.TotalPrice kr.</p>

            <button class="confirm-button" onclick="openPopup()">Bekræft og betal</button>
        </div>
    </div>
</div>

<div id="popupForm" class="popup-overlay" style="display:none;">
    <div class="popup">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <h2>Indtast dine oplysninger</h2>
        <form method="post" asp-action="CreateWithoutLogin" asp-controller="Booking">
            <input type="hidden" name="screeningId" value="@Model.ScreeningId" />
            <div class="form-group">
                <label>Fornavn *</label>
                <input type="text" name="firstName" required />
            </div>
            <div class="form-group">
                <label>Efternavn *</label>
                <input type="text" name="lastName" required />
            </div>
            <div class="form-group">
                <label>E-mail *</label>
                <input type="email" name="email" required />
            </div>
            <div class="form-group">
                <label>Bekræft E-mail *</label>
                <input type="email" name="confirmEmail" required />
            </div>
            <div class="form-group">
                <label>Telefon *</label>
                <input type="tel" name="phone" required />
            </div>
            <button type="submit" class="confirm-button">Videre</button>
        </form>
    </div>
</div>

<style>
    .confirmation-container {
        background-color: #0d1117;
        color: white;
        padding: 40px;
        min-height: 100vh;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #0d6efd;
        margin-bottom: 30px;
    }

    .info-box {
        display: flex;
        gap: 40px;
        align-items: flex-start;
        flex-wrap: wrap;
    }

    .poster {
        max-width: 200px;
        border-radius: 10px;
        box-shadow: 0 0 10px #000;
    }

    .details {
        max-width: 400px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .confirm-button {
        margin-top: 20px;
        padding: 12px 24px;
        background-color: #198754;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

        .confirm-button:hover {
            background-color: #157347;
        }

    /* Pop-up styling */
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999;
    }

    .popup {
        background-color: #161b22;
        padding: 30px;
        border-radius: 12px;
        width: 400px;
        color: white;
        box-shadow: 0 0 10px #000;
        position: relative;
    }

        .popup h2 {
            margin-bottom: 20px;
            color: #0d6efd;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: none;
        }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 22px;
        color: white;
        cursor: pointer;
    }
</style>

<script>
    function openPopup() {
        document.getElementById('popupForm').style.display = 'flex';
    }

    function closePopup() {
        document.getElementById('popupForm').style.display = 'none';
    }
</script>
