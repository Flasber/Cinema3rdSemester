@model BioProjekt.web.Models.BookingConfirmationViewModel

<h1>Tak for din booking!</h1>

<h2>@Model.MovieTitle</h2>
<p><strong>Sal:</strong> @Model.AuditoriumName</p>
<p><strong>Start:</strong> @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Slut:</strong> @Model.EndTime.ToString("HH:mm")</p>
<p><strong>Sæder:</strong> @string.Join(", ", Model.SeatLabels)</p>
<p><strong>I alt:</strong> @Model.TotalPrice kr.</p>

<hr />

<div>
    <h3>Vil du logge ind og gemme bookingen?</h3>
    <button class="btn btn-primary">Log ind</button>
    <button class="btn btn-secondary">Fortsæt uden login</button>
</div>
