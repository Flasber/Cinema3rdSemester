@model BioProjekt.web.Models.BookingConfirmationViewModel
@{
    ViewData["Title"] = "Tak for din booking";
}

<div class="completed-container">
    <h1>✔️ Tak for din booking!</h1>

    <p>Din bestilling er nu registreret. Du vil modtage en e-mail med bekræftelse.</p>

    <div class="summary-box">
        <h2>🎬 @Model.MovieTitle</h2>
        <p><strong>Sal:</strong> @Model.AuditoriumName</p>
        <p><strong>Start:</strong> @Model.StartTime.ToString("dd-MM-yyyy HH:mm")</p>
        <p><strong>Slut:</strong> @Model.EndTime.ToString("HH:mm")</p>
        <p><strong>Valgte sæder:</strong> @string.Join(", ", Model.SeatLabels)</p>
        @Model.TotalPrice.ToString("c0", new System.Globalization.CultureInfo("da-DK"))
    </div>

    <a href="/" class="home-button">Til forsiden</a>
</div>

<style>
    .completed-container {
        background-color: #0d1117;
        color: white;
        padding: 40px;
        min-height: 100vh;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #28a745;
        margin-bottom: 20px;
    }

    .summary-box {
        background-color: #161b22;
        padding: 20px;
        border-radius: 10px;
        display: inline-block;
        text-align: left;
        margin-top: 20px;
    }

    .home-button {
        margin-top: 25px;
        padding: 12px 24px;
        background-color: #0d6efd;
        color: white;
        font-weight: bold;
        text-decoration: none;
        border-radius: 8px;
        display: inline-block;
    }

        .home-button:hover {
            background-color: #0a58ca;
        }
</style>
